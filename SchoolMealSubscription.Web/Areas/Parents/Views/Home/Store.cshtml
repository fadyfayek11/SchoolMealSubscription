
@{
    ViewData["Title"] = "Store";
}

@model IEnumerable<Book>
<div class="container text-center">
    <div class="row pb-5">
        @foreach (var book in Model)
        {
            <div class="col-lg-3 col-sm-6 d-flex align-items-stretch">
                <div class="row p-2 w-100">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded h-100 d-flex flex-column">
                            <!-- Add 'object-fit-cover' class to maintain aspect ratio and 'fixed height' for images -->
                            <img src="@book.ImageUrl" class="card-img-top rounded" style="height: 300px; object-fit: cover;" />
                            <div class="card-body pb-0 flex-grow-1 d-flex flex-column">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@book.Title</p>
                                    <p class="card-title text-warning text-center">by <b>@book.Author</b></p>
                                    <h6 class="text-dark text-opacity-50 text-center pt-2">
                                        Price:
                                        <span>
                                            @book.Price.ToString("c")
                                        </span>
                                    </h6>
                                </div>
                                <div class="mt-auto">
                                    <a asp-action="Details" asp-route-bookId="@book.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
