<!-- Latest Books Section with Carousel -->
@if (Model.Count() != 0)
{
    <section class="latest-books-section py-5">
        <div class="container">
            <h2 class="text-center mb-5">Latest Books</h2>
            <div id="booksCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count(); i += 3)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")" data-aos="zoom-in">
                            <div class="row justify-content-center">
                                @for (int j = i; j < i + 3 && j < Model.Count(); j++)
                                {
                                    var book = Model.ElementAt(j);
                                    <div class="col-md-3 col-sm-6 mb-4">
                                        <div class="card">
                                            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title">
                                            <div class="card-body">
                                                <h5 class="card-title">@book.Title</h5>
                                                <p class="card-text">@Html.Raw(book.Description.Length > 200 ? book.Description.Substring(0, 200) + "..." : book.Description)</p>
                                                <p class="card-text">@book.Price.ToString("C")</p>
                                                <a asp-action="Details" asp-route-bookId="@book.Id" class="btn btn-primary">Buy Now</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#booksCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#booksCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>
}
