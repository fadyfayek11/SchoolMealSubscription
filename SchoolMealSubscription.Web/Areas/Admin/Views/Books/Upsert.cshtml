@model BookVM

<div class="container card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Book.Id != 0 ? "Update" : "Add") Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="@Model.Book.Id" hidden />
            <input asp-for="@Model.Book.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Book.Title" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Book.Title" class="ms-2"></label>
                            <span asp-validation-for="@Model.Book.Title" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="@Model.Book.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="@Model.Book.Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Book.ISBN" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Book.ISBN" class="ms-2"></label>
                            <span asp-validation-for="@Model.Book.ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Book.Author" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Book.Author" class="ms-2"></label>
                            <span asp-validation-for="@Model.Book.Author" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.Book.Price" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Book.Price" class="ms-2"></label>
                            <span asp-validation-for="@Model.Book.Price" class="text-danger"></span>
                        </div>
                       
                       
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Book.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="@Model.Book.CategoryId" class="ms-2"></label>
                            <span asp-validation-for="@Model.Book.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" asp-for="@Model.Book.ImageUrl" class="form-control border-0 shadow" />
                            <label asp-for="@Model.Book.ImageUrl" class="ms-2"></label>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Book.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-2">
                    <img src="@Model.Book.ImageUrl" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9"/>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | numlist bullist indent outdent ',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}