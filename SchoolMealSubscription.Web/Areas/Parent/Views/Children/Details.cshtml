@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SchoolMealSubscription.Models.Entities.Student

@{
    ViewData["Title"] = "Child Details";
}

<div class="container" style="margin-top:120px;margin-bottom: 158px;">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Gender:</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Grade:</dt>
                <dd class="col-sm-9">@Model.Grade?.Name</dd>

                <dt class="col-sm-3">School:</dt>
                <dd class="col-sm-9">@Model.School?.Name</dd>

                <dt class="col-sm-3">Has Allergy:</dt>
                <dd class="col-sm-9">
                    @if (Model.HasAllergy)
                    {
                        <span class="badge bg-warning text-dark">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-success">No</span>
                    }
                </dd>

                @if (Model.HasAllergy)
                {
                    <dt class="col-sm-3">Allergy Details:</dt>
                    <dd class="col-sm-9">@Model.AllergyDetails</dd>
                }

                @if (Model.FoodPreferences.Any())
                {
                    <dt class="col-sm-3">Food Preferences:</dt>
                    <dd class="col-sm-9">
                        <ul class="list-unstyled">
                            @foreach (var pref in Model.FoodPreferences)
                            {
                                <li>@pref.FoodType?.Name</li>
                            }
                        </ul>
                    </dd>
                }
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>