@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SchoolMealSubscription.Models.Entities.Student

@{
    ViewData["Title"] = "Delete Child";
}

<div class="container" style="margin-top:120px;margin-bottom: 158px;">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this child?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Grade:</dt>
                <dd class="col-sm-9">@Model.Grade.Name</dd>

                <dt class="col-sm-3">School:</dt>
                <dd class="col-sm-9">@Model.School.Name</dd>
            </dl>

            <div class="alert alert-warning">
                <strong>Warning!</strong> This action cannot be undone.
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>